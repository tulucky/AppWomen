<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">
    //chu y de height cua root la content do no match parent
    <ImageView
        android:id="@+id/image"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:src="@drawable/vay1e"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vai468Ä‘"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/helvetica"
        android:textSize="16sp"
        android:textColor="#e61414"
        android:layout_below="@id/image"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/phantram"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_below="@id/price"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/price_1"
        android:layout_marginTop="3dp"
        android:layout_centerHorizontal="true"
        android:text="-10%"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/utm_avob"
        android:background="@drawable/custom_giamgia0"
        />

</RelativeLayout>