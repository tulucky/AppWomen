<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagewl"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vay1" />

    <TextView
        android:id="@+id/namewl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imagewl"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/imagewl"
        app:layout_constraintStart_toEndOf="@+id/imagewl"
        app:layout_constraintTop_toBottomOf="@+id/pricewl"
        app:layout_constraintVertical_bias="0.92">

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/star"
            tools:layout_editor_absoluteX="309dp"
            tools:layout_editor_absoluteY="69dp" />

        <ImageView
            android:id="@+id/imageView25"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/star"
            tools:layout_editor_absoluteX="261dp"
            tools:layout_editor_absoluteY="69dp" />

        <ImageView
            android:id="@+id/imageView24"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/star"
            tools:layout_editor_absoluteX="333dp"
            tools:layout_editor_absoluteY="69dp" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/star"
            tools:layout_editor_absoluteX="285dp"
            tools:layout_editor_absoluteY="69dp" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:srcCompat="@drawable/star"
            tools:layout_editor_absoluteX="237dp"
            tools:layout_editor_absoluteY="69dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/pricewl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/imagewl"
        app:layout_constraintTop_toBottomOf="@+id/namewl" />

    <TextView
        android:id="@+id/opricewl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/pricewl"
        app:layout_constraintTop_toBottomOf="@+id/namewl" />

    <TextView
        android:id="@+id/salewl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/imagewl"
        app:layout_constraintTop_toTopOf="@+id/imagewl" />

    <ImageView
        android:id="@+id/bagwl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.337"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/opricewl"
        app:srcCompat="@drawable/bag" />

    <ImageView
        android:id="@+id/lovedwl"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/imagewl"
        app:layout_constraintEnd_toStartOf="@+id/imagewl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_favorite_pink_24dp" />
</android.support.constraint.ConstraintLayout>