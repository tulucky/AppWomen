<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:paddingBottom="15dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/share2"
    android:layout_marginTop="25sp"
    android:layout_marginRight="15dp">

    <ImageView
        android:id="@+id/imageView26"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/star"
        tools:layout_editor_absoluteX="309dp"
        tools:layout_editor_absoluteY="69dp" />

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/star"
        tools:layout_editor_absoluteX="261dp"
        tools:layout_editor_absoluteY="69dp" />

    <ImageView
        android:id="@+id/imageView24"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/star"
        tools:layout_editor_absoluteX="333dp"
        tools:layout_editor_absoluteY="69dp" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/star"
        tools:layout_editor_absoluteX="285dp"
        tools:layout_editor_absoluteY="69dp" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/star"
        tools:layout_editor_absoluteX="237dp"
        tools:layout_editor_absoluteY="69dp" />
</LinearLayout>

    <TextView
        android:id="@+id/name_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_color"
        android:fontFamily="@font/sans_prob"
        android:paddingBottom="2dp"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="2dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/share2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/share_2" />

    <TextView
        android:id="@+id/aproduct_des"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/helvetica"
        android:text="Ao Bo Na Na Shan"
        android:textColor="@color/light_black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/name_brand"
        app:layout_constraintEnd_toStartOf="@+id/share2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/name_brand"
        app:layout_constraintTop_toTopOf="@+id/name_brand" />

    <TextView
        android:id="@+id/aproduct_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:textSize="25sp"
        android:textColor="@color/cam"
        android:fontFamily="@font/sans_prob"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_brand" />

    <TextView
        android:id="@+id/origin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="TextView"
        android:textColor="@color/cam"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/aproduct_name"
        app:layout_constraintStart_toEndOf="@+id/aproduct_name"
        app:layout_constraintTop_toTopOf="@+id/aproduct_name" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/aproduct_name"
        android:layout_marginTop="20dp">
    </LinearLayout>

    <TextView
        android:id="@+id/sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/utm_avob"
        android:gravity="center"
        android:padding="3dp"
        android:text="10%"
        android:textColor="@color/cam"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/origin_price"
        app:layout_constraintStart_toEndOf="@+id/origin_price"
        app:layout_constraintTop_toTopOf="@+id/origin_price" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aproduct_name"
        app:srcCompat="@drawable/salesale" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="18dp"
        android:fontFamily="@font/utm_avor"
        android:text="Mua nhiều tích điểm sale"
        android:textColor="@color/cam"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/ship" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/utm_avor"
        android:text="Mua trên 5 sp free ship !"
        android:textColor="@color/cam"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />


</android.support.constraint.ConstraintLayout>