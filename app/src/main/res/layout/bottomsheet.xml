<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/boottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/backgroun"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#4D000000"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/bottom"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="#ffffff"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout3"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/price_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="168dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/sans_prob"
                android:text="textview"
                android:textColor="@color/red"
                android:textSize="19sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/constraintLayout2" />

            <TextView
                android:id="@+id/origin_price_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/StrikePrice"
                android:textColor="@color/gray"
                android:fontFamily="@font/helvetica"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/price_b"
                app:layout_constraintStart_toEndOf="@id/price_b"
                app:layout_constraintTop_toTopOf="@id/price_b" />

            <TextView
                android:id="@+id/description_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/helvetica"
                android:text="TextView"
                android:textColor="@color/gray"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/price_b"
                app:layout_constraintTop_toBottomOf="@+id/price_b" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/sticky_product_brand"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/description_b" />

            <TextView
                android:id="@+id/color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/sans_prob"
                android:text="Color :"
                android:textColor="@color/light_black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/color">
            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="15dp"
                android:text="Size :"
                android:textSize="18sp"
                android:textColor="@color/light_black"
                android:fontFamily="@font/sans_prob"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rec_color" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/size_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/size">
            </android.support.v7.widget.RecyclerView>

            <ImageView
                android:id="@+id/cancel_d"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/origin_price_b"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cancel" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#ffffff">

            <TextView
                android:id="@+id/amount"
                android:layout_width="65dp"
                android:layout_height="36dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="55dp"
                android:background="@drawable/border"
                android:fontFamily="@font/helvetica"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/light_black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                android:text="Quantity :"
                android:textSize="18sp"
                android:textColor="@color/light_black"
                android:fontFamily="@font/sans_prob"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/size_des" />

            <ImageView
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/amount"
                app:layout_constraintEnd_toStartOf="@+id/amount"
                app:srcCompat="@drawable/substract1" />

            <ImageView
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/amount"
                app:layout_constraintStart_toEndOf="@+id/amount"
                app:srcCompat="@drawable/plus" />

            <TextView
                android:id="@+id/size_des"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@color/ligpink"
                android:text="size S : 38 -42kg , size M : 42- 48kg , size L : 50 -56kg , size XL : 60-68kg."
                android:textColor="@color/light_black"
                android:textSize="13sp"
                android:fontFamily="@font/helvetica"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/constraintLayout3" />
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/image_botsheet"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginBottom="380dp"
        android:layout_marginStart="16dp"
        android:background="@color/pink"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/constraintLayout0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/constraintLayout0"
        app:layout_constraintVertical_bias="0.395" />

    <TextView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/pink"
        android:gravity="center"
        android:text="THÊM VÀO TÚI"
        android:fontFamily="@font/sans_prob"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>