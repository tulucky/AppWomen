<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="25dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#e2dede" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_brand"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:src="@drawable/anh_brad"
        android:layout_marginBottom="60dp"/>
    <ImageView
        android:id="@+id/logo_brand"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:src="@drawable/brand1"
        android:background="@drawable/background_brand"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="35dp"
            android:background="#59000000"
            android:fontFamily="@font/helvetica"
            android:padding="6dp"
            android:text="MORE   >"
            android:textColor="@color/white"
            android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:background="#FFFFFF"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingTop="8dp"
        android:gravity="center">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/item1"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/vay1"/>
            <TextView
                android:id="@+id/price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vai368"
                android:fontFamily="@font/helvetica"
                android:textSize="18sp"
                android:textColor="@color/fullblack"
                android:layout_gravity="center_horizontal|bottom"/>
            <TextView
                android:id="@+id/sale1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textSize="15sp"
                android:text="-10%"
                android:textColor="@color/white"
                android:fontFamily="@font/helvetica"
                android:background="@drawable/custom_giamgia"
                android:layout_marginStart="5dp"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/item2"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/vay1"/>
            <TextView
                android:id="@+id/price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vai368"
                android:fontFamily="@font/helvetica"
                android:textSize="18sp"
                android:textColor="@color/fullblack"
                android:layout_gravity="center_horizontal|bottom"
                />
            <TextView
                android:id="@+id/sale2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/white"
                android:fontFamily="@font/helvetica"
                android:textSize="15sp"
                android:text="-10%"
                android:background="@drawable/custom_giamgia"
                android:layout_marginStart="5dp"
                />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/item3"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/vay1"/>
            <TextView
                android:id="@+id/price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vai368"
                android:fontFamily="@font/helvetica"
                android:textSize="18sp"
                android:textColor="@color/fullblack"
                android:layout_gravity="center_horizontal|bottom"
                />
            <TextView
                android:id="@+id/sale3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/helvetica"
                android:background="@drawable/custom_giamgia"
                android:layout_marginStart="5dp"
                />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
</LinearLayout>